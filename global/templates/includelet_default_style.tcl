::xo::html::cssList {action bottom_action inc_bar_title inc_bar_subtitle}
::xo::html::add_style {
    a.action {width:50px;text-align:center;text-decoration:none;padding:1px 0;margin:4px 2px;font:11px normal;border:1px dotted;-moz-border-radius:0.7em;-webkit-border-radius:0.7em;border-radius:0.7em;}
    a.bottom_action {padding:0px 5px;font-size:11px;}
    .inc_bar_title {float:left;text-align:right;font-size:16px;margin-left:5px;}
    .inc_bar_subtitle {text-align:left;font-size:10px;}

    #blogs #echo #answers #remark {background:#fcfcfc;}

    #blogs a.action {color:#5a6986;}
    #blogs a.action:hover {background:#5a6986;color:#fcfcfc;}
    #blogs .inc_bar_title {color:#5a6986;}
    #blogs .inc_bar_subtitle {color:#5a6986;}

    #answers a.action {color:#5a8669;}
    #answers a.action:hover {background:#5a8669;color:#fcfcfc;}
    #answers .inc_bar_title {color:#5A8669;}
    #answers .inc_bar_subtitle {color:#5A8669;}

    #echo a.action {color:#660;}
    #echo a.action:hover {background:#660;color:#fcfcfc;}
    #echo .inc_bar_title {color:#8b814c;}
    #echo .inc_bar_subtitle {color:#8b814c;}

    #remark a.action {color:#865a69;}
    #remark a.action:hover {background:#865a69;color:#fcfcfc;}
    #remark .inc_bar_title {color:#865a69;}
    #remark .inc_bar_subtitle {color:#865a69;}
}
