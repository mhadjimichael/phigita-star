namespace eval ::xo::kit {;}

# what can be 'css', 'js', 'img'
ad_proc ::xo::kit::get_resources_dir {{-package ""} what} {
    if { ${package} ne {} } {
	set dir [file join packages ${package} resources ${what}]
    } else {
	set dir [file join resources ${what}]
    }
    return $dir
}


